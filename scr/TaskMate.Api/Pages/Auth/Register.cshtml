@page
@model TaskMate.Api.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<h2>Registrar Usu√°rio</h2>

<form method="post">
    <div class="form-group col-md-3 py-2">
        <label text="text" asp-for="Email">E-mail: </label>
        <input asp-for="RegisterDto.Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3 py-2">
        <label asp-for="Senha">Senha: </label>
        <input asp-for="RegisterDto.Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="py-2">
        <button type="submit" class="btn btn-primary col-md-3">Registrar</button>
    </div>
</form>


<p>@Model.Message</p>